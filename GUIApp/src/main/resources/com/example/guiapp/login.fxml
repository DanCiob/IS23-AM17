<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.guiapp.GUIController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ImageView fx:id="TitleView" disable="false"
               fitHeight="150.0" fitWidth="200.0"
               layoutX="109.0" layoutY="322.0"
               pickOnBounds="true"
               preserveRatio="true" />

    <Label fx:id="welcomeText"/>
    <HBox layoutX="230.0" layoutY="60.0" spacing="20.0">
        <Label text="Insert your nickname: " />
        <TextField fx:id="nickname"/>
    </HBox>
    <HBox spacing="20.0">
        <Label layoutX="330.0" layoutY="60.0" text="Choose socket or rmi: " />
        <TextField layoutX="309.0" layoutY="160.0" fx:id="socketOrRmi"/>
    </HBox>

    <HBox spacing="20.0">
        <Label layoutX="430.0" layoutY="60.0" text="Digit server IP: " />
        <TextField layoutX="409.0" layoutY="160.0" fx:id="serverIP"/>
    </HBox>
    <HBox spacing="20.0">
        <Label layoutX="530.0" layoutY="60.0" text="Digit server port: " />
        <TextField layoutX="509.0" layoutY="160.0" fx:id="serverPort"/>
    </HBox>

    <HBox spacing="20.0">
        <Label layoutX="630.0" layoutY="60.0" text="Do you want to create a new game(1) or join a game which is already started(2)?" />
        <TextField layoutX="609.0" layoutY="160.0" fx:id="newGame"/>
    </HBox>


    <Button text="Login" onAction="#onLoginButtonClick"/>
</VBox>
